<!doctype html>
<html>
<head>
    <title>Parking Attendant Aid</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">


    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
<div class="container-fluid">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/zepto/1.2.0/zepto.js"></script>

    <script>
        var current_user = {
            id : "{{ user.id }}",
            email : "{{ user.email }}",
            firstName : "{{ user.firstName }}",
            lastName : "{{ user.lastName }}",
        }


        $.ajax({
            url: '/api/v1/note/userid/' + current_user.id,
            success: function(data){
                const items = data.value;
                if(items.length > 0){
                    $('#notes').empty();

                    items.forEach(item => {
                        var time = item.recordTime;

                        $('#notes').append(`
                            <tr>
                                <td>${item.licenseNumber}</td>
                                <td>${item.description}</td>
                                <td>${item.recordTime}</td>
                            </tr>
                        `)
                    })
                }
            }
        })



        $.ajax({
            url: '/api/v1/violation/userid/' + current_user.id,
            success: function(data){
                const items = data.value;
                if(items.length > 0){
                    $('#violations').empty();

                    items.forEach(item => {
                        $('#violations').append(`
                            <tr>
                                <td>${item.licenseNumber}</td>
                                <td>${item.description}</td>
                                <td>${item.violationTime}</td>
                                <td>${item.fineAmount}</td>
                                <td>${item.paid ? 'PAID' : ''}</td>
                            </tr>
                        `)
                    })
                }
            }
        })
    </script>

    <div class="text-center">
        <h1><span class="fa fa-anchor"></span> Parking Attendant Aid</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <hr />
    </div>

    <div class="row">

    <!-- LOCAL INFORMATION -->
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-heading"><span class="fa fa-user"></span> User Profile</div>
            <div class="panel-body">
                <strong>user_id:</strong><br />
                {{ user.id }}<br>
                <strong>email:</strong><br />
                {{ user.email }}<br>
                <strong>first_name:</strong><br />
                {{ user.firstName }}<br />
                <strong>last_name:</strong><br />
                {{ user.lastName }}<br />
            </div>
          </div>
    </div>
    </div>


    <div class="row">
        <div class="col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading"><span class="fa fa-sticky-note-o"></span> Your Recorded Notes</div>
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th>licenseNumber</th>
                        <th>description</th>
                        <th>recordTime</th>
                      </tr>
                    </thead>
                    <tbody id="notes">
                    </tbody>
                </table>
            </div>
          </div>
    </div>

        <div class="col-sm-6">
        <div class="panel panel-danger">
            <div class="panel-heading"><span class="fa fa-exclamation-circle"></span> Violations</div>
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th>licenseNumber</th>
                        <th>description</th>
                        <th>violationTime</th>
                        <th>fineAmount</th>
                        <th>paid</th>
                      </tr>
                    </thead>
                    <tbody id="violations">
                    </tbody>
                </table>
            </div>
          </div>
    </div>

    </div>
</body>
</html>
